<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/productIcon"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginEnd="6dip"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="140sp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/productIcon"
        android:layout_toEndOf="@id/productIcon"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="16sp" />


    <TextView
        android:id="@+id/productPrice"
        android:layout_width="80sp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/productName"
        android:layout_toEndOf="@id/productName"
        android:gravity="center_vertical"
        android:text="" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/productPrice"
        android:layout_toEndOf="@id/productPrice"
        android:text="+" />


</RelativeLayout>