<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company.CompanyUserActiveOrdersActivity">

    <LinearLayout
        android:id="@+id/optionsBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.2">
        <Button
            android:id="@+id/ordersMenuButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="16sp"
            android:background="@drawable/button_pattern" />
    </LinearLayout>

    <ListView
        android:id="@+id/activeOrders"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_vertical"
        android:scrollbars="vertical"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/optionsBar">
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>